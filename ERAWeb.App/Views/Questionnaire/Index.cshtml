<script>
    $(document).on('change', '.up', function () {
        var names = [];
        var length = $(this).get(0).files.length;
        for (var i = 0; i < $(this).get(0).files.length; ++i) {
            names.push($(this).get(0).files[i].name);
        }
        // $("input[name=file]").val(names);
        switch (length) {
            case 0:
                break;
            case 1:
                $(this).closest('.form-group').find('.form-control').attr("value", names);
                $(this).parents("div.col-5").eq(0).find("span#deleteImage").show();
                break;
            default:
                var fileName = names.join(', ');
                $(this).closest('.form-group').find('.form-control').attr("value", length + " files selected");
                $(this).parents("div.col-5").eq(0).find("span#deleteImage").show();
                break;
        }
    });

    $(document).on('click', 'input#txtFileName', function (e) {
        $(this).parent().find("input#up").click();
        e.stopPropagation();
        e.preventDefault();
    });

    $(document).on('click', 'span#deleteImage', function (e) {
        $(this).parents("div.col-5").eq(0).find("input#up").val("").change();
        $(this).parents("div.col-5").eq(0).find('.form-control').attr("value", "");
        $(this).hide();
    });
</script>
