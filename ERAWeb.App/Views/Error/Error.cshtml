@*@model ErrorViewModel*@
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div id="ui-view">
        <div>
            <div class="animated fadeInDown">
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-sm-12 col-xl-8">
                        <div class="jumbotron">
                            <h1 class="display-2 text-danger">Error</h1>
                            <h1 class="text-danger">Oops! Something went wrong.!</h1>
                            <p class="text-muted">An error occurred while processing your request.</p>
                            <hr class="my-4">
                            <p>Please try again logging in. In case of any issues, please write to us on <a href="mailto:xxxx@gmail.com">Admin</a></p>
                            <p class="lead">
                                <a class="btn btn-xing active mt-3" asp-controller="Account"
                                   asp-action="Login">Login Now!</a>
                            </p>
                        </div>
                    </div>
                    <div class="col-xl-2"></div>
                </div>
            </div>
        </div>
    </div>
</div>